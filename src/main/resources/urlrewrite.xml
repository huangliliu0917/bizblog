<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<urlrewrite>
    <!-- 栏目列表页，注意html后面没有加$，因为后面还有若干参数 -->
    <rule>
        <from>^/channel/(\w+)\.html</from>
        <to>/channel/$1</to>
    </rule>

    <!-- 文章详情页 -->
    <rule>
        <from>^/post/(\w+)\.html</from>
        <to>/post/$1</to>
    </rule>

    <!-- 前端标签页 -->
    <rule>
        <from>^/tags.html</from>
        <to>/tags</to>
    </rule>

    <!-- 标签详情页 -->
    <rule>
        <from>^/tag/(\w+)\.html</from>
        <to>/tag/$1/</to>
    </rule>

</urlrewrite>